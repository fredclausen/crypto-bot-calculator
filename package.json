{
  "name": "crypto-bot-calculator",
  "version": "0.0.1",
  "description": "A simple electron app that will allow you to simulate different DCA bot configurations",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "http://www.github.com/fredclausen/crypto-bot-calculator"
  },
  "scripts": {
    "compile": "tsc && copyfiles -f src/index.html dist && copyfiles src/*.js dist",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Fred Clausen",
  "license": "MIT",
  "directories": {
    "app": "./dist"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "copyfiles": "^2.4.1",
    "electron": "^18.2.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "crypto_bot_calculator"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
